<body>
    
        <img id="bgMusic" class="rotate-image" src="/images/music_icon.png" onclick="startOrOff()"/>
        <audio loop id="bgAudio" src="harry_potter_theme.mp3"></audio>
        <script>
            var audio = document.querySelector("#bgAudio"); 
            var image = document.querySelector("#bgMusic");
            var playing = false;
            function startOrOff(){   
            if(!playing){
                audio.play();
                image.classList.add("playing");
                playing = true;
            }else{
                audio.pause();
                image.classList.remove("playing");
                playing = false;
            }
            }
            
        </script>
    
    
